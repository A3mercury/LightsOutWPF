<Window x:Class="LightsOutWPF.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="aboutExitCommand_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Label Content="Turn all the lights off(black) to win the game" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,98,0,0" Width="243"/>
        <Button Content="OK" Command="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="108,128,0,0"/>
        <Image HorizontalAlignment="Left" Height="87" VerticalAlignment="Top" Width="87" Margin="32,11,0,0" Source="icon.ico"/>
        <Label Content="Lights Out!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="132,25,0,0" Background="White" FontSize="24" FontWeight="Bold" Foreground="Red"/>
        <Label Content="by Austin Andrews" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,61,0,0" Width="114"/>

    </Grid>
</Window>
